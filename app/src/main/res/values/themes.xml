<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stunting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blueSecond</item>
        <item name="colorSecondary">@color/blueSecond_200</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorStroke">@color/gray</item>

        <!-- Text color -->
        <item name="colorText">@color/black</item>
        <item name="colorTextHint">@color/light_gray_500</item>

        <!-- Menggunakan activity transition -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <!--    Gambar di splash screen-->
    <style name="RoundedImageView" parent="ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day">
        <item name="cornerSize">16dp</item>  <!-- Ubah nilai ini untuk menyesuaikan radius -->
    </style>


    <style name="Theme.Stunting" parent="Base.Theme.Stunting" />

    <!-- Supaya sudutnya melingkar pada TextInputLayout -->
    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Stunting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Stunting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stunting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>